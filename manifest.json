{
  "name": "Jira Task Reminder Extension",
  "version": "1.0",
  "description": "A helper chrome extension that helps your to never forget a task open!",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "permissions": [ 
    "storage",
    "activeTab", 
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "icons": {
    "16": "images/img16.png",
    "32": "images/img32.png",
    "48": "images/img48.png",
    "128": "images/img128.png"
  },
  "manifest_version": 2
}